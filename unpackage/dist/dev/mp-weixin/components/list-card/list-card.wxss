.listcard {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 10px;
  margin: 10px;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  -webkit-box-shadow: 0 0 5px 1px rgba(0,0,0,0.1);
          box-shadow: 0 0 5px 1px rgba(0,0,0,0.1);
}
.listcard .image {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 60px;
  height: 60px;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  overflow: hidden;
}
.listcard .image image {
  height: 100%;
  width: 100%;
}
.listcard .content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding-left: 10px;
  width: 100%;
}
.listcard .content .title {
  position: relative;
  padding-right: 30px;
  font-size: 14px;
  color: #333;
  font-weight: 700;
  line-height: 1.2;
}
.listcard .content .title text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.listcard .content .desc {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 12px;
}
.listcard .content .desc .label {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.listcard .content .desc .label .label-item {
  padding: 0 5px;
  margin-right: 5px;
  -webkit-border-radius: 15px;
          border-radius: 15px;
  color: #f07373;
  border: 1px #f07373 solid;
}
.listcard .content .desc .browse {
  color: #999;
  line-height: 1.5;
}
.listcard.mode-column .content {
  width: 100%;
  padding-left: 0;
}
.listcard.mode-column .content .image {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 10px;
  width: 100%;
  height: 70px;
}
.listcard.mode-column .content .image .img-item {
  margin-left: 10px;
  width: 100%;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  overflow: hidden;
}
.listcard.mode-column .content .image .img-item image {
  width: 100%;
  height: 100%;
}
.listcard.mode-column .content .image .img-item:first-child {
  margin-left: 0;
}
.listcard.mode-column .content .desc {
  margin-top: 10px;
}
.listcard.mode-image {
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.listcard.mode-image .image {
  width: 100%;
  height: 100px;
}
.listcard.mode-image .content {
  padding-left: 0;
  margin-top: 10px;
}
.listcard.mode-image .content .desc {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 10px;
}

