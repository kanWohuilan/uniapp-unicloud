.detail {
  padding: 15px 0;
  padding-bottom: 54px;
}
.detail .detail-title {
  padding: 0 15px;
  font-size: 18px;
  font-weight: bold;
  color: #333;
}
.detail .detail-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 10px;
  padding: 0 15px;
}
.detail .detail-header .avatar {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 40px;
  height: 40px;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  overflow: hidden;
}
.detail .detail-header .avatar image {
  width: 100%;
  height: 100%;
}
.detail .detail-header .content {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding-left: 10px;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 12px;
}
.detail .detail-header .content .content-title {
  font-size: 14px;
  color: #333;
}
.detail .detail-header .content .content-info {
  color: #999;
}
.detail .detail-header .content .content-info text {
  margin-right: 10px;
}
.detail .detail-header .header-button {
  height: 30px;
  font-size: 12px;
  color: #fff;
  background-color: #f07373;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.detail .detail-content {
  margin-top: 20px;
}
.detail .detail-content .html {
  padding: 0 15px;
}
.detail .detail-content .comment {
  margin-top: 30px;
}
.detail .detail-content .comment .comment-title {
  padding: 10px 15px;
  font-size: 14px;
  color: #666;
  border-bottom: 1px solid #f5f5ff;
}
.detail .detail-content .comment .comment-content {
  padding: 0 15px;
  border-top: 1px #eee solid;
}
.detail .detail-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 44px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-top: 1px #f5f5f5 solid;
  background-color: #fff;
}
.detail .detail-bottom .bottom-input {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 30px;
  border: 1px #ddd solid;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  margin-left: 10px;
  padding: 0 10px;
  width: 100%;
}
.detail .detail-bottom .bottom-input text {
  font-size: 14px;
  color: #999;
}
.detail .detail-bottom .bottom-icons {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 10px;
}
.detail .detail-bottom .bottom-icons .icon-box {
  text-align: center;
  width: 44px;
}

